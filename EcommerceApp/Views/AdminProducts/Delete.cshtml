@model EcommerceApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this product? This action cannot be undone.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <h3 class="mb-3">@Model.Name</h3>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>
                                
                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">$@Model.Price.ToString("F2")</dd>
                                
                                <dt class="col-sm-4">Stock</dt>
                                <dd class="col-sm-8">@Model.Stock</dd>
                                
                                <dt class="col-sm-4">Product ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>
                            </dl>
                            
                            <div class="mt-3">
                                <h5>Description</h5>
                                <p class="text-muted">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>