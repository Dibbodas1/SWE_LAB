@model EcommerceApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="card-title mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 250px;" />
                        </div>
                        <div class="col-md-8">
                            <h3 class="mb-3">@Model.Name</h3>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>
                                
                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">$@Model.Price.ToString("F2")</dd>
                                
                                <dt class="col-sm-4">Stock</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Stock > 0)
                                    {
                                        <span class="badge bg-success">In Stock (@Model.Stock)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Product ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>
                            </dl>
                            
                            <div class="mt-3">
                                <h5>Description</h5>
                                <p class="text-muted">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil me-2"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>